{
    "openapi": "3.0.0",
    "info": {
        "version": "1.0.0",
        "title": "Stock and Prices"
    },
    "tags": [
        {
            "name": "Request"
        }
    ],
    "paths": {
        "/": {
            "get": {
                "tags": ["Request"],
                "summary": "Return Home Page",
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "text/plain": {
                                "schema":{
                                    "type": "string",
                                    "example": "<h1>Home Page</h1>"
                                }
                            }
                        }
                    }   
                }
            }
        },
        "/login": {
            "get": {
                "tags": ["Request"],
                "summary": "Return Login Page",
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "text/plain": {
                                "schema":{
                                    "type": "string",
                                    "example": "<h1>Login Page</h1>"
                                }
                            }
                        }
                    }   
                }
            },
            "post": {
                "tags": ["Request"],
                "summary": "Login Authentication",
                "requestBody": {
                    "description": "Username and Password",
                    "required": true,
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "$ref":  "#/components/schemas/User"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Login Successful",
                        "content": {
                            "text/plain": {
                                "schema":{
                                    "type": "string",
                                    "example": "Login Successfully"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Incorrect Username or Password!",
                        "content": {
                            "text/plain": {
                                "schema":{
                                    "type": "string",
                                    "example": "Incorrect Username or Password!"
                                }
                            }
                        }
                    }   
                }
            }
        },
        "/signUp": {
            "get": {
                "tags": ["Request"],
                "summary": "Return Sign Up Page",
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "text/plain": {
                                "schema":{
                                    "type": "string",
                                    "example": "<h1>Sign Up Page</h1>"
                                }
                            }
                        }
                    }   
                }
            },
            "post": {
                "tags": ["Request"],
                "summary": "Create a new account",
                "requestBody": {
                    "description": "Username and Password",
                    "required": true,
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "$ref":  "#/components/schemas/NewUser"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Account Created Successful",
                        "content": {
                            "text/plain": {
                                "schema":{
                                    "type": "string",
                                    "example": "Account Created. Please Sign In"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Username already exist!",
                        "content": {
                            "text/plain": {
                                "schema":{
                                    "type": "string",
                                    "example": "Username already exist! Try other username"
                                }
                            }
                        }
                    }   
                }
            }
        }

    },
    "components": {
        "schemas": {
            "User": {
                "type": "object",
                "properties": {
                    "username": {
                        "type": "string"
                    },
                    "password": {
                        "type": "string"
                    }
                }
            },
            "NewUser":{
                "type": "object",
                "properties": {
                    "username": {
                        "type": "string"
                    },
                    "password": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    }
                }
            }
        }
    }
    
}
{
    "openapi": "3.0.0",
    "info": {
        "version": "1.0.0",
        "title": "Stock and Prices"
    },
    "tags": [
        {
            "name": "SignUp/Login"
        },
        {
            "name": "Games"
        }
    ],
    "paths": {
        "/": {
            "get": {
                "tags": [
                    "SignUp/Login"
                ],
                "summary": "Return Home Page",
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "text/plain": {
                                "schema": {
                                    "type": "string",
                                    "example": "<h1>Home Page</h1>"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/login": {
            "get": {
                "tags": [
                    "SignUp/Login"
                ],
                "summary": "Return Login Page",
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "text/plain": {
                                "schema": {
                                    "type": "string",
                                    "example": "<h1>Login Page</h1>"
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "SignUp/Login"
                ],
                "summary": "Login Authentication",
                "requestBody": {
                    "description": "Username and Password",
                    "required": true,
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "$ref": "#/components/schemas/User"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Login Successful",
                        "content": {
                            "text/plain": {
                                "schema": {
                                    "type": "string",
                                    "example": "Login Successfully"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Incorrect Username or Password!",
                        "content": {
                            "text/plain": {
                                "schema": {
                                    "type": "string",
                                    "example": "Incorrect Username or Password!"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/signUp": {
            "get": {
                "tags": [
                    "SignUp/Login"
                ],
                "summary": "Return Sign Up Page",
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "text/plain": {
                                "schema": {
                                    "type": "string",
                                    "example": "<h1>Sign Up Page</h1>"
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "SignUp/Login"
                ],
                "summary": "Create a new account",
                "requestBody": {
                    "description": "Username and Password",
                    "required": true,
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "$ref": "#/components/schemas/newUser"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Account Created Successful",
                        "content": {
                            "text/plain": {
                                "schema": {
                                    "type": "string",
                                    "example": "Account Created. Please Sign In"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Username already exist!",
                        "content": {
                            "text/plain": {
                                "schema": {
                                    "type": "string",
                                    "example": "Username already exist! Try other username"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/dblogin": {
            "get": {
                "tags": [
                    "SignUp/Login"
                ],
                "summary": "When it is successfully connecting to db, show Hello World if key value pair exist in db else indicate Hello World not exist in db",
                "parameters": [
                    {
                        "in": "query",
                        "name": "dbHost",
                        "schema": {
                            "type": "string"
                        },
                        "description": "The hostname of the db instance."
                    },
                    {
                        "in": "query",
                        "name": "dbPort",
                        "schema": {
                            "type": "string"
                        },
                        "description": "The port to connect to the db instance."
                    }
                ],
                "responses": {
                    "209": {
                        "description": "db connection is OK, but Hello World key-value pair not found",
                        "content": {
                            "text/plain": {
                                "schema": {
                                    "type": "string",
                                    "example": "<h1> No data with Hello World in db.</h1>"
                                }
                            }
                        }
                    },
                    "200": {
                        "description": "db connection is OK and Hello World key-value pair is found",
                        "content": {
                            "text/plain": {
                                "schema": {
                                    "type": "string",
                                    "example": "<h1>Hello World</h1>"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "",
                        "content": {
                            "text/plain": {
                                "schema": {
                                    "type": "string",
                                    "example": "<h1>Connection Error! Please provide valid dbHost and dbPort as query strings and make sure your mongoDB server is running. </h1>"
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "SignUp/Login"
                ],
                "summary": "Insert into db with user input first and last",
                "parameters": [
                    {
                        "in": "query",
                        "name": "dbHost",
                        "schema": {
                            "type": "string"
                        },
                        "description": "The hostname of the db instance."
                    },
                    {
                        "in": "query",
                        "name": "dbPort",
                        "schema": {
                            "type": "string"
                        },
                        "description": "The port to connect to the db instance."
                    }
                ],
                "requestBody": {
                    "description": "Username, first name and last name",
                    "required": true,
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "$ref": "#/components/schemas/dbPostUser"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "text/plain": {
                                "schema": {
                                    "type": "string",
                                    "example": "<h1>Welcome {username}!</h1>\n<d>A document is inserted with your inputs: '{first} {last} and its corresponding object _id is 5fd5b615044f620009e74398</d>"
                                }
                            }
                        }
                    },
                    "210": {
                        "description": "OK",
                        "content": {
                            "text/plain": {
                                "schema": {
                                    "type": "string",
                                    "example": "<h1>Welcome {username}!</h1>\n<d>A document with your inputs already exist!</d>"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "",
                        "content": {
                            "text/plain": {
                                "schema": {
                                    "type": "string",
                                    "example": "<h1>Connection Error! Please provide valid dbHost and dbPort as query strings and make sure your mongoDB server is running. </h1>"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/games/title?name=GAMENAME": {
            "get": {
                "tags": [
                    "Games"
                ],
                "summary": "Return information of the all games related to GAMENAME",
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "text/plain": {
                                "schema": {
                                    "$ref": "#/components/schemas/gamesInfo"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Server Error, API Call Failed",
                        "content": {
                            "text/plain": {
                                "schema": {
                                    "type": "string",
                                    "example": "Get request from {URL} failed."
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "User": {
                "type": "object",
                "properties": {
                    "username": {
                        "type": "string"
                    },
                    "password": {
                        "type": "string"
                    }
                }
            },
            "newUser": {
                "type": "object",
                "properties": {
                    "username": {
                        "type": "string"
                    },
                    "password": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    }
                }
            },
            "dbPostUser": {
                "type": "object",
                "properties": {
                    "username": {
                        "type": "string"
                    },
                    "first": {
                        "type": "string"
                    },
                    "last": {
                        "type": "string"
                    }
                }
            },
            "gamesInfo": {
                "type": "object",
                "additionalProperties": {
                    "type": "object",
                    "additionalProperties": {
                        "oneOf": [
                            {
                                "type": "string"
                            },
                            {
                                "type": "array",
                                "items": {
                                    "$ref": "#/components/schemas/storesForGame"
                                }
                            }
                        ]
                    }
                },
                "example": "{\n  GAMEID1:{\n    name: GAMENAME, \n    stores: [ \n      {cur_price: CURPRICE, org_price: ORGPRICE, saving: SAVING%, store: SOMESTORE},\n       ...\n    ]\n  }, \n  GAMEID2:{\n    ...\n  },\n  ....\n}"
            },
            "storesForGame": {
                "type": "object",
                "additionalProperties": {
                    "type": "string"
                }
            }
        }
    }
}